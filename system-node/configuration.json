{
  "system": {
    "name": "System Node Example",
    "description": "Controls the hydroponics system sensors and component"
  },
  "mqtt": {
    "gateway": {
      "uri": "mqtt://192.168.1.15",
      "username": "",
      "password": ""
    },
    "options": {
      "qos": 2
    },
    "topics": {
      "subscriptions": [
        "node/0/register",
        "node/{id}/command/humidity",
        "node/{id}/command/proximity",
        "node/{id}/command/relay",
        "node/{id}/command/temperature",
        "node/{id}/command/temphum",
        "node/{id}/command/heartbeat",
        "node/{id}/component/create",
        "node/{id}/component/update",
        "node/{id}/component/delete",
        "node/{id}/status",
        "node/{id}/ping"
      ]
    }
  },
  "node": {
    "id": "19291",
    "name": "System Node 1",
    "description": "First hydroponics setup",
    "components": [
      {
        "id": "1234",
        "type": {
          "model": "SRD05",
          "description": "relay"
        },
        "pin": 12,
        "state": "off",
        "alias": "Light 1"
      },
      {
        "id": "1235",
        "type": {
          "model": "SRD05",
          "description": "relay"
        },
        "pin": 16,
        "state": "off",
        "alias": "Light 2"
      },
      {
        "id": "1236",
        "type": {
          "model": "SRD05",
          "description": "relay"
        },
        "pin": 20,
        "state": "off",
        "alias": "Fan"
      },
      {
        "id": "1237",
        "type": {
          "model": "SRD05",
          "description": "relay"
        },
        "pin": 21,
        "state": "off",
        "alias": "Nutrient Pump"
      },
      {
        "id": "1238",
        "alias": "Lower Shelf DHT22",
        "type": {
          "model": "DHT22",
          "description": "temperature/humidity"
        },
        "pin": 19,
        "state": "on",
        "preferences": {
          "scale": "celsius",
          "threshold": {
            "min": 20.5,
            "max": 30
          },
          "interval": 5000
        }
      },
      {
        "id": "1239",
        "alias": "Upper Shelf DHT22",
        "type": {
          "model": "DHT22",
          "description": "temperature/humidity"
        },
        "pin": 26,
        "state": "on",
        "preferences": {
          "scale": "celsius",
          "threshold": {
            "min": 20.5,
            "max": 30
          },
          "interval": 2000
        }
      }
    ]
  }
}