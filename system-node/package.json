{
  "name": "system-node",
  "version": "1.0.0",
  "description": "A single Raspberry Pi node that receives message from the System router",
  "main": "system-node.js",
  "scripts": {
    "prebuild": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "build": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "lint:fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "Hyrdoponics",
    "Automation",
    "IoT",
    "Raspberry",
    "Pi"
  ],
  "author": "Jason White",
  "license": "ISC",
  "dependencies": {
    "@grow/common": "file:../_modules/@grow/common",
    "mqtt": "^2.18.8",
    "node-dht-sensor": "^0.4.1",
    "onoff": "^3.2.9",
    "rxjs": "^6.5.4",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/onoff": "^4.1.0",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
