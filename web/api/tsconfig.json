{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es6",                         
    "module": "commonjs",                    
    "strict": true,                          
    "esModuleInterop": true,                  
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}