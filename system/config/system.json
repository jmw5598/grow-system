{
  "name": "System Messaging Router",
  "description": "Handles and routes MQTT messages from web api to appropriate system-node",
  "mqtt": {
    "gateway": {
      "uri": "mqtt://192.168.1.15",
      "username": "",
      "password": ""
    },
    "options": {
      "qos": 2
    },
    "topics": {
      "subscriptions": [
        "system/system/command/ping",
        "system/system/command/status",
        "system/system/event/status",
        "system/system-node/register",
        "system/system-node/registered",
        "system/system-node/event/humidity",
        "system/system-node/event/notification",
        "system/system-node/event/proximity",
        "system/system-node/event/relay",
        "system/system-node/event/temperature",
        "system/system-node/event/temperature-humidity",
        "system/system-node/command/humidity",
        "system/system-node/command/proximity",
        "system/system-node/command/relay",
        "system/system-node/command/temperature",
        "system/system-node/command/temperature-humidity"
      ]
    }
  }
}
